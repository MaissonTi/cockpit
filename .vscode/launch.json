{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "sourceMaps": true,
      "restart": true,
      "stopOnEntry": false,
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "protocol": "inspector",
    }
  ]
}
